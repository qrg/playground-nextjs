{
  "compilerOptions": {
    "target": "es5",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "noErrorTruncation": true
  },
  "include": [
    "next-env.d.ts",
    "src",
    "mocks",
    "types",
    "const",
    "./jest.setup.ts" // https://github.com/testing-library/jest-dom/blob/v5.16.5/README.md#with-typescript
  ],
  "exclude": ["node_modules"]
}
